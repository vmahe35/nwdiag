{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Python: Debug module via a run.py file with cwd and ../examples/nwdiag/simple_with_custom_trunk_diameter.diag inputfile",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/run.py",
            // "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "cwd": "${workspaceFolder}/src",
            "args": [
                "../examples/nwdiag/simple_with_custom_trunk_diameter.diag"
            ]
        }
    ]
}